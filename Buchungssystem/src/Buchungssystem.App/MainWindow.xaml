<Window
    x:Class="Buchungssystem.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Buchungssystem.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Buchungssystem.App.ViewModel"
    Title="MainWindow"
    Width="525"
    Height="350"
    Loaded="MainWindow_OnLoaded"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources />

    <Grid>
        <StackPanel>
            <Menu Height="20">
                <MenuItem />
            </Menu>

            <Border Padding="5">
                <TabControl x:Name="RaumView" ItemsSource="{Binding Raeume}">
                    <!--<TabControl.ItemContainerStyle>
                        <Style TargetType="{x:Type MenuItem}">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        </Style>
                    </TabControl.ItemContainerStyle>!-->
                    
                    <TabControl.ItemTemplate>
                        <DataTemplate DataType="viewModel:RaumViewModel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    
                </TabControl>
            </Border>
        </StackPanel>
    </Grid>
</Window>



