<Window
    x:Class="Buchungssystem.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Buchungssystem.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:TischViewModel}">
            <ListBox ItemsSource="{Binding Source={ StaticResource }}" />
        </DataTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Stretch">
        <DockPanel>
            <Menu Height="20px" DockPanel.Dock="Top">
                <MenuItem Header="_Datei">
                    <MenuItem Header="_Neu">
                        <MenuItem Header="_Raum" />
                        <MenuItem Header="_Warengruppe" />
                    </MenuItem>
                </MenuItem>
            </Menu>
            <DockPanel DockPanel.Dock="Top">
                <StackPanel DockPanel.Dock="Left">
                    <Label Content="Räume" />
                </StackPanel>


            </DockPanel>

        </DockPanel>
    </Grid>
</Window>

