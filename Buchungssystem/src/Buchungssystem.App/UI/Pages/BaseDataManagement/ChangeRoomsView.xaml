<UserControl
    x:Class="Buchungssystem.App.UI.Pages.BaseDataManagement.ChangeRoomsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseDataManagement="clr-namespace:Buchungssystem.App.ViewModel.SubViewModels.BaseDataManagement"
    xmlns:converter="clr-namespace:Buchungssystem.App.Converter.Buchungssystem.App.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Buchungssystem.App.UI.Pages.BaseDataManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Buchungssystem.App.ViewModel"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <DockPanel>
        <ListView DockPanel.Dock="Left" ItemsSource="{Binding Path=RoomViewModels}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="viewModel:RoomViewModel">
                    <StackPanel>
                        <StackPanel.InputBindings>
                            <MouseBinding Command="{Binding Path=SelectCommand}" MouseAction="LeftClick" />
                        </StackPanel.InputBindings>

                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding Path=SelectCommand}" Header="Auswählen" />
                            </ContextMenu>
                        </StackPanel.ContextMenu>

                        <Border
                            Padding="10,15,15,15"
                            BorderBrush="LightGray"
                            BorderThickness="1">

                            <StackPanel>
                                <TextBlock
                                    FontSize="18px"
                                    FontWeight="Bold"
                                    Text="{Binding Path=Name, Mode=OneWay}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid DockPanel.Dock="Bottom">
            <Border BorderThickness="10px">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="200px"
                        Height="25px"
                        FontSize="18px"
                        Text="{Binding Path=ActualRoomViewModel.Name, Mode=OneWay}"
                        Visibility="{Binding Path=ActualRoomViewModel.NoEdit, Mode=OneWay, Converter={converter:BoolToVisibleConverter}}" />
                    <TextBox
                        Width="200px"
                        Height="25px"
                        FontSize="18px"
                        Text="{Binding Path=ActualRoomViewModel.Name, Mode=TwoWay}"
                        Visibility="{Binding Path=ActualRoomViewModel.Edit, Mode=OneWay, Converter={converter:BoolToVisibleConverter}}" />
                    <Button Height="25px" Command="{Binding Path=ActualRoomViewModel.EditCommand}">
                        <StackPanel>
                            <Canvas
                                Width="25"
                                Height="25"
                                Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Path
                                    Canvas.Left="21.0463"
                                    Canvas.Top="19.9749"
                                    Width="34.9788"
                                    Height="34.9788"
                                    Data="F1 M 53.2929,21.2929L 54.7071,22.7071C 56.4645,24.4645 56.4645,27.3137 54.7071,29.0711L 52.2323,31.5459L 44.4541,23.7677L 46.9289,21.2929C 48.6863,19.5355 51.5355,19.5355 53.2929,21.2929 Z M 31.7262,52.052L 23.948,44.2738L 43.0399,25.182L 50.818,32.9601L 31.7262,52.052 Z M 23.2409,47.1023L 28.8977,52.7591L 21.0463,54.9537L 23.2409,47.1023 Z "
                                    Fill="#FF000000"
                                    Stretch="Fill" />
                            </Canvas>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
